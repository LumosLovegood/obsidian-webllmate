{
	"compilerOptions": {
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"module": "ES2015",
		"target": "ES6",
		"allowJs": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"importHelpers": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"types": [
			"node"
		],
		"strictNullChecks": true,
		"lib": [
			"DOM",
			"ES5",
			"ES6",
			"ES7"
		]
	},
	"include": [
		"**/*.ts",
		"types",
		"**/*.svelte",
		"svelte-shims.d.ts"
	],
	"exclude": [
		"node_modules",
		"tests"
	]
}
